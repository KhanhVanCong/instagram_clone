<div id="post<%= comment.post_id %>ModalComment<%= comment.id %>">
	<div class="d-flex justify-content-between">
		<div class="d-flex">
			<% if current_user && current_user.profile_picture.attached? %>
				<%= image_tag current_user.profile_picture, class: "img-thumbnail rounded-circle", style: "width: 2.5rem; max-height: 2.5rem" %>
			<% else %>
				<%= image_tag "user_no_pc.png", class: "img-thumbnail rounded-circle", style: "width: 2.5rem; max-height: 2.5rem" %>
			<% end %>
			<div class="d-flex flex-column mx-3 justify-content-center">
				<small class="fw-bold overflow-hidden wrap" style="text-overflow: ellipsis; white-space: nowrap; max-width: 10rem">
					<%= comment.user.username %>
				</small>
				<small><%= comment.body %></small>
				<small class="text-muted"><%= time_ago_in_words(comment.created_at) %></small>
			</div>
		</div>
		<% if comment.user == current_user %>
			<%= button_to comment_path(id: comment.id), method: :delete, style: "background: none; border: none" do %>
				<i class="fa fa-times"></i>
			<% end %>
		<% end %>
	</div>
</div>